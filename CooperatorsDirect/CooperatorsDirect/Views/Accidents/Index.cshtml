@model IEnumerable<CooperatorsDirect.Models.Accident>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateAccidentEnregistre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAccidentProduit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Localisation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CirconstancesAccident)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateAccidentEnregistre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAccidentProduit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Localisation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CirconstancesAccident)
